rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 프로모션 컬렉션
    match /promotions/{document=**} {
      // 읽기: 모든 사용자가 읽을 수 있음 (익명 포함)
      allow read: if true;
      // 쓰기: 인증된 관리자만 가능
      allow write: if request.auth != null && 
                   exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // 고객 컬렉션
    match /customers/{document=**} {
      // 읽기: 인증된 관리자만 가능
      allow read: if request.auth != null && 
                  exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      // 쓰기: 인증된 관리자만 가능
      allow write: if request.auth != null && 
                   exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // 고객 그룹 컬렉션
    match /customerGroups/{document=**} {
      // 읽기: 인증된 관리자만 가능
      allow read: if request.auth != null && 
                  exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      // 쓰기: 인증된 관리자만 가능
      allow write: if request.auth != null && 
                   exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // 시스템 설정 컬렉션
    match /systemSettings/{document=**} {
      // 읽기: 모든 사용자가 읽을 수 있음 (공개 설정용)
      allow read: if true;
      // 쓰기: 인증된 관리자만 가능
      allow write: if request.auth != null && 
                   exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // 관리자 컬렉션
    match /admins/{document=**} {
      // 읽기: 인증된 관리자만 가능 (자신의 정보 포함)
      allow read: if request.auth != null && 
                  exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      // 쓰기: 인증된 관리자만 가능
      allow write: if request.auth != null && 
                   exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // 프로모션 통계 컬렉션
    match /promotionStats/{document=**} {
      // 읽기: 인증된 관리자만 가능
      allow read: if request.auth != null && 
                  exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      // 쓰기: 모든 사용자가 통계 기록 가능 (조회수 카운팅용)
      allow create: if true;
      allow update: if true;
      // 삭제는 관리자만 가능
      allow delete: if request.auth != null && 
                    exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // 기타 모든 컬렉션: 기본적으로 접근 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 