rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 프로모션 컬렉션
    match /promotions/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 고객 컬렉션
    match /customers/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 고객 그룹 컬렉션
    match /customerGroups/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 시스템 설정 컬렉션 - 모든 사용자가 읽을 수 있음
    match /systemSettings/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 관리자 컬렉션
    match /admins/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
} 