rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 프로모션 컬렉션 규칙
    match /promotions/{promotionId} {
      // 읽기: 모든 사용자가 읽을 수 있음
      allow read: if true;
      
      // 쓰기: 인증된 사용자만 (관리자)
      allow write: if request.auth != null;
      
      // 삭제: 인증된 사용자만
      allow delete: if request.auth != null;
    }
    
    // 고객 정보 컬렉션 규칙
    match /customers/{customerId} {
      // 읽기: 인증된 사용자만
      allow read: if request.auth != null;
      
      // 쓰기: 인증된 사용자만
      allow write: if request.auth != null;
      
      // 삭제: 인증된 사용자만
      allow delete: if request.auth != null;
    }
    
    // 고객 그룹 컬렉션 규칙
    match /customerGroups/{groupId} {
      // 읽기: 인증된 사용자만
      allow read: if request.auth != null;
      
      // 쓰기: 인증된 사용자만
      allow write: if request.auth != null;
      
      // 삭제: 인증된 사용자만
      allow delete: if request.auth != null;
    }
    
    // 관리자 컬렉션 규칙
    match /admins/{adminId} {
      // 읽기: 인증된 사용자만
      allow read: if request.auth != null;
      
      // 쓰기: 인증된 사용자만
      allow write: if request.auth != null;
      
      // 삭제: 인증된 사용자만
      allow delete: if request.auth != null;
    }
    
    // 기본 규칙: 다른 모든 문서는 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 