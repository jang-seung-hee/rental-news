rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 프로모션 이미지 폴더
    match /promotions/{allPaths=**} {
      // 읽기: 모든 사용자가 읽을 수 있음
      allow read: if true;
      
      // 쓰기: 인증된 사용자만 (관리자)
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024 // 5MB 제한
                   && request.resource.contentType.matches('image/.*');
    }
    
    // 시스템 설정 이미지 폴더
    match /system-settings/{allPaths=**} {
      // 읽기: 모든 사용자가 읽을 수 있음
      allow read: if true;
      
      // 쓰기: 인증된 사용자만 (관리자)
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024 // 5MB 제한
                   && request.resource.contentType.matches('image/.*');
    }
    
    // 기본 규칙: 다른 모든 파일은 거부
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 